<!doctype html>
<html lang="zh-CN" data-bs-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ symbol.name }} — {{ site.title }}</title>
    <meta name="description" content="{{ symbol.name }} 情绪分析 — SentiX" />
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'><text y='14' font-size='14'>S</text></svg>" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../static/styles.css{% if build_version %}?v={{ build_version }}{% endif %}" rel="stylesheet" />
  </head>
  <body>
    <nav class="navbar">
      <div class="container-fluid">
        <div class="d-flex align-items-center gap-2">
          <a class="btn btn-outline-secondary btn-sm rounded-pill" href="../index.html">&#x2190; 返回</a>
          <div>
            <span class="fw-bold" style="font-size:1.05rem;">{{ symbol.name }}</span>
            <span class="badge-asset {{ 'badge-futures' if symbol.asset == 'futures' else 'badge-stock' }} ms-1">
              {{ '期货' if symbol.asset == 'futures' else 'A股' }}
            </span>
            <div class="brand-sub">{{ symbol.id }}</div>
          </div>
        </div>
        <div class="d-flex gap-2 align-items-center">
          <button class="btn btn-outline-secondary btn-sm rounded-pill" id="themeToggle" type="button">&#x25D0;</button>
        </div>
      </div>
    </nav>

    <main class="container py-3">
      <div class="row g-3">
        <!-- Controls -->
        <div class="col-12">
          <div class="d-flex flex-wrap gap-2 align-items-center">
            <input class="form-control" style="max-width:180px;border-radius:8px;font-size:.85rem;" type="date" id="datePicker" />
            <div class="form-check" style="font-size:.85rem;">
              <input class="form-check-input" type="checkbox" id="toggleSentiment" checked />
              <label class="form-check-label" for="toggleSentiment">显示情绪折线</label>
            </div>
            <a class="btn btn-outline-primary btn-sm rounded-pill" id="csvLink" href="#" download>&#x1F4E5; 下载 CSV</a>
          </div>
        </div>

        <!-- Summary KPI -->
        <div class="col-12">
          <div class="card">
            <div class="card-header-custom">
              <span class="dot dot-live"></span> 实时概要
            </div>
            <div class="card-body" id="summaryCard">
              <div class="no-data">加载中…</div>
            </div>
          </div>
        </div>

        <!-- K Line -->
        <div class="col-12">
          <div class="card">
            <div class="card-header-custom">
              <span class="dot dot-ok"></span> K 线图 · 近 30 个交易日
            </div>
            <div class="card-body">
              <div class="chart-container">
                <canvas id="klineChart" height="220"></canvas>
              </div>
              <div class="divider"></div>
              <div class="card-header-custom" style="border:none;padding-left:0;">
                <span class="dot dot-ok"></span> 成交量 · 情绪叠加
              </div>
              <div class="chart-container">
                <canvas id="volChart" height="160"></canvas>
              </div>
            </div>
          </div>
        </div>

        <!-- Correlation -->
        <div class="col-12 col-md-4">
          <div class="card h-100">
            <div class="card-header-custom">
              <span class="dot dot-ok"></span> 情绪-涨跌幅相关性
            </div>
            <div class="card-body text-center py-4">
              <div class="kpi-label">20 日滚动相关系数</div>
              <div class="kpi-value" id="corr20" style="font-size:2rem;">--</div>
              <div class="kpi-sub" id="corr20Hint">数据计算中</div>
            </div>
          </div>
        </div>

        <!-- Agents -->
        <div class="col-12 col-md-8">
          <div class="card h-100">
            <div class="card-header-custom">
              <span class="dot dot-ok"></span> 多 Agent 评分
            </div>
            <div class="card-body">
              <div id="agentsBox"></div>
              <div id="agentsEmpty" class="no-data d-none">数据更新中</div>
            </div>
          </div>
        </div>

        <!-- Trade Plan -->
        <div class="col-12">
          <div class="card">
            <div class="card-header-custom">
              <span class="dot dot-ok"></span> 交易计划（3 周期）
            </div>
            <div class="card-body">
              <div id="planBox"></div>
              <div id="planEmpty" class="no-data d-none">休市 / 无交易计划</div>
            </div>
          </div>
        </div>

        <!-- Fundamentals (futures only) -->
        {% if symbol.asset != 'stock' %}
        <div class="col-12" id="fundamentalsSection">
          <div class="card">
            <div class="card-header-custom">
              <span class="dot dot-ok"></span> 基本面（库存 / 基差 / 展期 / 持仓）
            </div>
            <div class="card-body">
              <div class="d-flex flex-wrap justify-content-between gap-2 align-items-center mb-2">
                <div style="color:var(--sx-text-secondary);font-size:.8rem;" id="fundUpdatedAt"></div>
              </div>
              <div style="color:var(--sx-text-secondary);font-size:.8rem;" id="fundSummary"></div>
              <div id="fundEmpty" class="no-data d-none">数据更新中</div>
              <div id="fundBox" class="mt-2"></div>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Extras -->
        <div class="col-12">
          <div class="card">
            <div class="card-header-custom">
              <span class="dot dot-ok"></span> 补充数据模块
            </div>
            <div class="card-body">
              <div id="extrasBox" class="vstack gap-1"></div>
              <div id="extrasEmpty" class="no-data d-none">数据更新中</div>
            </div>
          </div>
        </div>

        <!-- News -->
        <div class="col-12">
          <div class="card">
            <div class="card-header-custom">
              <span class="dot dot-ok"></span> 相关新闻
            </div>
            <div class="card-body">
              <div id="newsList" class="vstack gap-2"></div>
              <div id="newsEmpty" class="no-data d-none">数据更新中</div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer class="site-footer">
      <div>SentiX · 深意·X — 多维度金融情绪分析终端</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-chart-financial@0.2.1/dist/chartjs-chart-financial.min.js"></script>
    <script>window.__BASE_PATH__ = {{ base_path|tojson }}; window.__SYMBOL__ = {{ symbol|tojson }};</script>
    <script src="../static/app.js{% if build_version %}?v={{ build_version }}{% endif %}"></script>
  </body>
</html>
